<?xml version="1.0" encoding="UTF-8"?>
<ivysettings>
    <settings defaultResolver="default-chain" />
    <resolvers>
        <chain name="default-chain">
		    <filesystem name="local">
		      <ivy pattern="${ivy.default.ivy.user.dir}/local/[organisation]/[module]/[revision]/[type]s/[artifact].[ext]" />
		      <artifact pattern="${ivy.default.ivy.user.dir}/local/[organisation]/[module]/[revision]/[type]s/[artifact](-[classifier]).[ext]" />
		    </filesystem>
            <ibiblio name="ibiblio" m2compatible="true"/> 
			<url name="maven.vaadin.com/vaadin-addons" m2compatible="true">
			    <ivy pattern="http://maven.vaadin.com/vaadin-addons/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
			    <artifact pattern="http://maven.vaadin.com/vaadin-addons/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
			</url>
			<url name="repo.springsource.org/libs-milestone" m2compatible="true">
			    <ivy pattern="http://repo.springsource.org/libs-milestone/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
			    <artifact pattern="http://repo.springsource.org/libs-milestone/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]"/>
			</url>
        </chain>
    </resolvers>
</ivysettings>